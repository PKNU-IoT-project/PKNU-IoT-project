<Window x:Class="raspiDisplay.sender"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:raspiDisplay"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:domain="clr-namespace:MaterialDesignDemo.domain"
        mc:Ignorable="d"
        Title="sender" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="1.1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="0.1*" />
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.ColumnSpan="2" Background="#002984">
            <Grid.Effect>
                <DropShadowEffect Color="Gray" ShadowDepth="5" Opacity="0.5"/>
            </Grid.Effect>
            <StackPanel Orientation="Horizontal">
                <Button Width="30" Height="30" Padding="0"
                        Style="{StaticResource MaterialDesignFlatMidBgButton}">
                    <materialDesign:PackIcon Kind="ArrowLeftCircleOutline" />
                </Button>
                <Button Width="30" Height="30" Padding="0"
                        Style="{StaticResource MaterialDesignFlatMidBgButton}">
                    <materialDesign:PackIcon Kind="HomeCircleOutline" />
                </Button>
                <TextBlock Margin="10,0,0,0" VerticalAlignment="Center" Text="EtoI3's Smart Box"
                        Foreground="White" FontSize="13"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="0" Grid.Row="1" Grid.RowSpan="2">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Left" Margin="0,0,50,130">
                <Run FontSize="35" FontWeight="ExtraBold">보내는 분의</Run>
                <LineBreak/>
                <Run FontSize="25" FontWeight="SemiBold">휴대폰 번호를</Run>
                <LineBreak/>
                 <Run FontSize="25" FontWeight="SemiBold">입력해주세요.</Run>
            </TextBlock>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center">
            <StackPanel>
                <TextBox materialDesign:HintAssist.Hint="휴대폰 번호 입력" Width="320" Margin="10,70,0,0"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}">
                    <TextBox.Text>
                        <Binding Path="Text2" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <domain:NotEmptyValidationRule ValidatesOnTargetUpdated="False"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            
            <!-- 첫번째 행 -->            
            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <Button Width="70" Height="53" Margin="10,0,13,0"
                        Content="1" FontSize="20" BorderBrush="DarkGray" Foreground="Black"
                        Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                        materialDesign:ButtonAssist.CornerRadius="22">
                </Button>
                <Button Width="70" Height="53" Margin="13,0,13,0"
                        Content="2" FontSize="20" BorderBrush="DarkGray" Foreground="Black"
                        Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                        materialDesign:ButtonAssist.CornerRadius="22">
                </Button>
                <Button Width="70" Height="53" Margin="13,0,10,0"
                        Content="3" FontSize="20" BorderBrush="DarkGray" Foreground="Black"
                        Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                        materialDesign:ButtonAssist.CornerRadius="22">
                </Button>
            </StackPanel>

            <!-- 두번째 행 -->
            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <Button Width="70" Height="53" Margin="10,0,13,0"
                        Content="4" FontSize="20" BorderBrush="DarkGray" Foreground="Black"
                        Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                        materialDesign:ButtonAssist.CornerRadius="22">
                </Button>
                <Button Width="70" Height="53" Margin="13,0,13,0"
                        Content="5" FontSize="20" BorderBrush="DarkGray" Foreground="Black"
                        Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                        materialDesign:ButtonAssist.CornerRadius="22">
                </Button>
                <Button Width="70" Height="53" Margin="13,0,10,0"
                        Content="6" FontSize="20" BorderBrush="DarkGray" Foreground="Black"
                        Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                        materialDesign:ButtonAssist.CornerRadius="22">
                </Button>
            </StackPanel>

            <!-- 세번째 행 -->
            <StackPanel Orientation="Horizontal" Grid.Row="2">
                <Button Width="70" Height="53" Margin="10,0,13,0"
                        Content="7" FontSize="20" BorderBrush="DarkGray" Foreground="Black"
                        Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                        materialDesign:ButtonAssist.CornerRadius="22">
                </Button>
                <Button Width="70" Height="53" Margin="13,0,13,0"
                        Content="8" FontSize="20" BorderBrush="DarkGray" Foreground="Black"
                        Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                        materialDesign:ButtonAssist.CornerRadius="22">
                </Button>
                <Button Width="70" Height="53" Margin="13,0,10,0"
                        Content="9" FontSize="20" BorderBrush="DarkGray" Foreground="Black"
                        Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                        materialDesign:ButtonAssist.CornerRadius="22">
                </Button>
            </StackPanel>

            <!-- 네번째 행 -->
            <StackPanel Orientation="Horizontal" Grid.Row="3">
                <Button Width="70" Height="53" Margin="10,0,13,0"
                        BorderBrush="DarkGray" Foreground="Black"
                        Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                        materialDesign:ButtonAssist.CornerRadius="22">
                    <materialDesign:PackIcon Kind="BackspaceOutline" Height="20" Width="20" />
                </Button>
                <Button Width="70" Height="53" Margin="13,0,13,0"
                        Content="0" FontSize="20" BorderBrush="DarkGray" Foreground="Black"
                        Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                        materialDesign:ButtonAssist.CornerRadius="22">
                </Button>
                <Button Width="70" Height="53" Margin="13,0,10,0"
                        Content="OK" FontSize="18"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        materialDesign:ButtonAssist.CornerRadius="22">
                </Button>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
